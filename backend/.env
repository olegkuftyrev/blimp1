# Core
NODE_ENV=development
HOST=0.0.0.0
PORT=3333
APP_NAME=blimp-backend
APP_URL=http://localhost:3333
# Generate a strong key: openssl rand -hex 32
APP_KEY=REPLACE_WITH_64_HEX
LOG_LEVEL=debug

# Sessions
SESSION_DRIVER=cookie

# CORS
CORS_ORIGIN=*

# Database (SQLite fallback; Postgres default)
SQLITE_DB_PATH=./tmp/db.sqlite3
DB_CLIENT=pg
PG_HOST=127.0.0.1
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DB_NAME=blimp
PG_SSL=false

# Websocket / Realtime
WS_CORS_ORIGIN=*